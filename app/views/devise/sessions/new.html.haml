.container
  .col-sm-6
    %h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: %i(form form-horizontal)}) do |f|
      .field.form-group
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class: %i(form-control)
      .field.form-group
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "off", class: %i(form-control)
      - if devise_mapping.rememberable?
        .field.form-group
          = f.label :remember_me, class: %i(form-check-label) do
            = f.check_box :remember_me, class: %i(form-check-input)
      .actions.form-group
        = f.submit "Log in", class: %i(btn btn-primary)
    = render "devise/shared/links"
